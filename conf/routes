# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                                       Application.index

# Map static resources from the /app/public folder to the /public path
#GET     /public/                                staticDir:public

POST     /users/create                    Users.create(format: 'application/json')
GET      /users/authenticate              Users.authenticate(format: 'application/json')
POST     /groups/create                   Groups.create(format: 'application/json')
GET      /groups/{id}                     Groups.show(format: 'application/json')
