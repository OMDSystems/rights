# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                                       Application.index

# Map static resources from the /app/public folder to the /public path
#GET     /public/                                staticDir:public

POST     /administration/add_user                 Administration.addUser(format: 'application/json')
GET      /administration/auth_user                Administration.authenticateUser(format: 'application/json')
POST     /administration/add_group                Administration.addGroup(format: 'application/json')
GET      /administration/groups/{id}              Administration.getGroup(format: 'application/json')
